@page
@model BulkyWebRazor.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.Id" hidden />

    <div class="border p-3  mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-decoration-underline">
                Delete Category
            </h2>
            <hr />
        </div>
        <div class="mb-3">
            <label for="Category.Name">Category Name</label>
            <input asp-for="Category.Name" type="text" class="form-control" disabled />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Category.DisplayOrder">Display Order</label>
            <input asp-for="Category.DisplayOrder" type="number" class="form-control" disabled />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>

        </div>
        <div class="row">
            <div class="col-6 col-md-2">
                <button type="submit" class="btn btn-danger col-6 form-control">Delete</button>
            </div>
            <div class="col-6 col-md-2">

                <a asp-page="/categories/index" class="btn btn-outline-secondary form-control">Back To List</a>
            </div>

        </div>
    </div>
</form>
